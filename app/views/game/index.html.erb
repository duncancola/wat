<div class="container">
	<!-- using watermelon sherbet colour scheme, because it is delicious -->
	<div class="row">
		<div class="span12">
			<h1>WAT MUSIC GAME</h1>
		</div>
	</div>
	<div class="row">
		<div class="span8" id="infoContainer">
			<div id="mainPhoto">
				<img src=<%= image_path("maryland_mosh_pit.jpg") %> id="normalModePhoto" class="shown"/>
				<img src=<%= image_path("portable_record_player.jpg") %> id="hipsterModePhoto" class="hidden"/>
			</div>
		</div>
		<div class="span4">
			<div id="gameSidebar">
				<h3>Game Stats</h3>
				<ul>
				</ul>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="span12">
			<div id="questionContainer">
				<h2>Choose Your mode</h2>
				<select id="modeSelection"></select>
			</div>
		</div>
	</div>
	<div class="row" id="options">
		<div class="span6">
			<div class="optionContainer standardOption" id="normal">
				<h2>NORMAL MODE</h2>
			</div>
		</div>
		<div class="span6">
			<div class="optionContainer standardOption" id="hipster">
				<h2>HIPSTER MODE</h2>
			</div>
		</div>
	</div>
</div>

<!-- preloaded sounds -->
<audio id="sound_wat1" preload=auto autobuffer> 
  <source src="assets/wat1.mp3" />
</audio>
<audio id="sound_wat2" preload=auto autobuffer"> 
  <source src="assets/wat2.mp3" />
</audio>
<audio id="sound_wat3" preload=auto autobuffer"> 
  <source src="assets/wat3.mp3" />
</audio>

<!-- WINNER MODAL! -->
<div class="modal hide fade" id="winnerModal">
	<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3>Thanks for playing!</h3>
	</div>
	<div class="modal-body">
		
	</div>
</div>


<!-- TEMPLATES -->
<script id="gameMenuTemplate" type="text/template">
<div class="span6">
	<div class="optionContainer standardOption" id="normal">
		<h2>NORMAL MODE</h2>
	</div>
</div>
<div class="span6">
	<div class="optionContainer standardOption" id="hipster">
		<h2>HIPSTER MODE</h2>
	</div>
</div>
</script>

<script id="optionsTemplate" type="text/template">
<div id="{{uniqueQuestionId}}">
{{#options}}
	<div class="span4">
		<div class="optionContainer standardOption" id="{{id}}">
			<h2>{{content}}</h2>
		</div>
	</div>
{{/options}}
</div>
</script>

<script id="infoContainerTemplate" type="text/template">
<div class="row">
	<div class="span8" id="allPreviousArtists">
		
	</div>
</div>
<div class="row">
	<div class="span8" id="lastPreviousArtist">
	
	</div>
</div>
</script>

<script id="previousAnswerTemplate" type="text/template">
<div class="row">
	<div class="span4">
		<h2 class="{{correct}}">{{correct}}</h2>
		<p>{{artistInfo}}</p>
	</div>
	<div class="span4">
		<img src="{{image}}" alt="previous answer artist image"/>
	</div>
</div>
</script>

<script id="optionsTemplateImage" type="text/template">
<div id="{{uniqueQuestionId}}">
{{#options}}
	<div class="span4">
		<div class="optionContainer standardOption" id="{{id}}">
			<img src="{{content}}"/>
		</div>
	</div>
{{/options}}
</div>
</script>

<script id="questionStatTemplate" type="text/template">
<div class="questionStatContainer" id="{{gameStatId}}">
	<div class="questionNumber">
		<span class="padQuestion">Q{{index}}</span>
	</div>
	<div class="questionStat">
		<span class="padQuestion">{{questionText}}</span>
	</div>
	<div class="questionIcon">
		<span class="padQuestion"><i class="icon-music"></i></span>
	</div>
</div>
<div class="clearfix"></div>
</script>
